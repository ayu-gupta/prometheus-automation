[Unit]
Description=Solr Exporter Service
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart=/opt/solr-exporter-{{ solr_exporter_version }}/bin/solr-exporter -p 9983 -b http://{{ solr_ip }}:{{ solr_port }}/solr -f /opt/solr-exporter-{{ solr_exporter_version }}/conf/config.yml

Restart=Always
StartLimitBurst=0
RestartSec=600

[Install]
WantedBy=multi-user.target
After=network-online.target
Wants=network-online.target
